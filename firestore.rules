rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function hasRole(role) {
      return request.auth.token.role == role;
    }

    match /products/{productId} {
      allow read: if true; // Publicly viewable
      allow write: if isSignedIn() && hasRole('admin');
    }

    match /quoteRequests/{requestId} {
      allow create: if true; // Allow anonymous and logged-in users to submit
      allow read: if isSignedIn() && (
        hasRole('admin') || 
        (hasRole('buyer') && request.auth.token.companyId == resource.data.companyId) ||
        (hasRole('supplier') && resource.data.assignedSupplierId == request.auth.uid)
      );
      allow update: if isSignedIn() && hasRole('admin');
    }
    
    match /quoteResponses/{responseId} {
      allow create, read: if isSignedIn() && (
        hasRole('admin') || 
        hasRole('supplier') ||
        (hasRole('buyer') && request.auth.token.companyId == get(/databases/$(database)/documents/quoteRequests/$(request.resource.data.quoteRequestId)).data.companyId)
      );
    }
    
    match /suppliers/{supplierId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && hasRole('admin');
    }
  }
}
